<html>

<head>
    <title>Team Drive</title>
    <link rel="stylesheet" href="node_modules/xterm/css/xterm.css" />
    <script src="/node_modules/xterm/lib/xterm.js"></script>
</head>

<body>
    <div id="home">
        <% if (success_message != ''){ %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong> <%= success_message %> </strong>
        </div>
        <% } %>
        <h1>Welcome <%=user%> </h1>
        <br />
        <form action="/logout" method="get">
            <input type="submit" value="Logout" />
        </form>
        <form action="/createNewTeam" method="get">
            <input type="submit" value="Create New Team" />
        </form>

        <button id="btn">notifications</button>
        <div id="notifications"></div>
        <button id="teams">My Teams</button>
        <div id="teamsBlock"></div>
        <div id="terminal" style="display:block"></div>
        <input type="file" id="fileSelector" multiple style="display:none">
    </div>
    <script src="js/script_home.js"></script>
    <script src="script.js"></script>
</body>

</html>